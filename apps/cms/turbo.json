{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "outputs": ["build", "dist"]
    },
    "dev": {
      "env": [
        "NODE_ENV",
        "DATABASE_URI",
        "PAYLOAD_PUBLIC_BASE_URL",
        "SECRET",
        "SECRET_FILE",
        "EMAIL_HOST",
        "EMAIL_USERNAME",
        "EMAIL_USERNAME_FILE",
        "EMAIL_PASSWORD",
        "EMAIL_PASSWORD_FILE",
        "STORAGE_ACCOUNT",
        "STORAGE_ACCOUNT_FILE",
        "STORAGE_KEY",
        "STORAGE_KEY_FILE",
        "STORAGE_SECRET",
        "STORAGE_SECRET_FILE",
        "STORAGE_BUCKET",
        "STORAGE_REGION",
        "ASSETS_BASE_URL"
      ],
      "cache": false,
      "persistent": true
    }
  }
}
